#General Aliases
alias ls="ls -GH"
alias ll="ls -l"
alias lla="ls -la"

alias gdb="sudo gdb"

#sets the tmux source file to ~/.config/tmux/tmux.conf
#the -2 option is to force tmux to always load a screen-256colors terminal
#on every platform
alias tmux="tmux -2 -f $HOME/.config/tmux/tmux.conf"

alias vim="nvim"

#enables perl regex for grep and colored output
alias grep="grep -P --color=auto"
alias fgrep="fgrep  --color=auto"
alias egrep="egrep  --color=auto"

# python packages
alias compdb='compdb -p build/Debug/ list > compile_commands.json'
