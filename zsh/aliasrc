#General Aliases
alias ls="ls -GH"

alias gdb="sudo gdb"

#sets the tmux source file to ~/.config/tmux/tmux.conf
#the -2 option is to force tmux to always load a screen-256colors terminal
#on every platform
alias tmux="tmux -2 -f ~/.config/tmux/tmux.conf"

alias vim="nvim"

#enables perl regex for grep and colored output
alias grep="grep -P --color=auto"
alias fgrep="fgrep  --color=auto"
alias egrep="egrep  --color=auto"

#aliasing emacs
alias emacs="/usr/local/Cellar/emacs/27.2/bin/emacs -nw"

#aliases the icloud directory path
alias icloud_drive="/Users/paolobaldan/Library/Mobile Documents/com~apple~CloudDocs"
